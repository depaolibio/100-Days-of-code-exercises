MENU = {
    "espresso": {
        "ingredients": {
            "water": 50,
            "coffee": 18,
        },
        "cost": 1.5,
    },
    "latte": {
        "ingredients": {
            "water": 200,
            "milk": 150,
            "coffee": 24,
        },
        "cost": 2.5,
    },
    "cappuccino": {
        "ingredients": {
            "water": 250,
            "milk": 100,
            "coffee": 24,
        },
        "cost": 3.0,
    }
}

resources = {
    "water": 300,
    "milk": 200,
    "coffee": 100,
}
print("â˜•")

def check_resources(drink):
    global MENU
    if drink in MENU:
        for k in MENU[drink]["ingredients"]:
            print(k)
            print(MENU[drink]["ingredients"][k])
            new_resources = (resources[k]) - MENU[drink]["ingredients"][k]
            print(new_resources)
        for k in resources:
            print(k)
            print(resources[k])
        cost = MENU[drink]["cost"]
        print(f"\nThe ingredients and volumes are listed above, and it will cost {cost}.")

input = input("What would you like to order? (espresso/latte/cappuccino): ").lower()
if input == "off":
    print("the machine is being turned off... goodbye!")
    exit()
if input == "report":
    print(resources)
    exit()
check_resources(input)
